<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ImagenesMercadoLibre.Views.Me"
             x:Class="ImagenesMercadoLibre.Views.Me.MeDetailsPage">
    <StackLayout Padding="20" Spacing="12">
        <local:MeView />
        <Button Text="Update" BorderRadius="0" Margin="0,30,0,0" FontAttributes="Bold" TextColor="White" BackgroundColor="#5989B5" Command="{Binding UpdateMeCommand}" />
        <Button Text="Delete" BorderRadius="0" Margin="0,30,0,0" FontAttributes="Bold" TextColor="White" BackgroundColor="#5989B5" Command="{Binding DeleteMeCommand}" />
    </StackLayout>
</ContentPage>  